{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "python game_app/manage.py migrate && gunicorn twgame.wsgi:application --bind 0.0.0.0:$PORT"
  },
  "environments": {
    "production": {
      "build": {
        "buildCommand": "pip install -r requirements.txt --no-cache-dir"
      },
      "deploy": {
        "startCommand": "cd game_app && python manage.py migrate && gunicorn twgame.wsgi:application --bind 0.0.0.0:$PORT --workers 3 --threads 2"
      }
    }
  }
}
